<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showumpireinfo"
    android:orientation="vertical"
    android:background="@color/primaryBgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shapetoolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/toll">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:background="@drawable/arrow_foreground"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apptitle"
            android:textSize="20sp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center"
            android:layout_marginStart="90dp"
            android:textColor="@color/white"
            android:fontFamily="@font/amaranth"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/profileiconpage_foreground"
        android:layout_below="@+id/toll"
        android:id="@+id/image"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/image"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="@color/navigation"
            android:fontFamily="@font/amaranth"
            android:padding="20dp"/>
    </LinearLayout>


</RelativeLayout>
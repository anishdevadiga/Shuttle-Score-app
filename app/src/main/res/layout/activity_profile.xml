<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity"
    android:background="@color/primaryBgColor"
    android:orientation="vertical">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:background="@drawable/bottomnavigator"
        android:id="@+id/bottomnavigationbar"
        android:elevation="2dp"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconSize="70dp"
        app:itemIconTint="@drawable/itemselector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/profiletoolbarani"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/profilelayout">
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:id="@+id/profilepic"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp"
            android:background="@drawable/profile_foreground"
            android:layout_gravity="center||center_horizontal||center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/profilemenulayout"
        android:elevation="20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_below="@+id/profilelayout"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/bottomnavigationbar"
        android:layout_marginBottom="70dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="username"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/username"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:text="usernamme@gmail.com"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/email"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu1"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu2"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu3"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu4"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
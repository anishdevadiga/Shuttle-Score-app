<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity"
    android:background="@color/primaryBgColor"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


<com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigationbar"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/bottomnavigator"
        android:elevation="2dp"
        app:itemIconSize="40dp"
        app:itemIconTint="@drawable/itemselector"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/profiletoolbarani"
        android:orientation="vertical"
        android:id="@+id/profilelayout"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- Circular Image -->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/profilepic"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/profile_foreground"
                android:background="@drawable/circular_background"/>

            <!-- Delete Icon beside the image -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/deleteIcon"
                android:src="@drawable/delete_foreground"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profilemenulayout"
        android:elevation="20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:id="@+id/menucard"
        android:layout_below="@+id/profilelayout"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/bottomnavigationbar"
        android:layout_marginBottom="70dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="username"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/username"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:text="usernamme@gmail.com"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/email"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu1"
            android:padding="5dp"
            android:background="@color/primaryBgColor"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umpireinfo_foreground"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umpire Info"
                android:padding="2dp"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profilearrow_foreground"
                android:layout_gravity="center"
                android:scaleType="center"
                android:layout_marginStart="90dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu2"
            android:padding="5dp"
            android:background="@color/primaryBgColor"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/changeprofile_foreground"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profilearrow_foreground"
                android:layout_gravity="center"
                android:scaleType="center"
                android:layout_marginStart="54dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu3"
            android:padding="5dp"
            android:background="@color/primaryBgColor"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/changepasword"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ChangePassword"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profilearrow_foreground"
                android:layout_gravity="center"
                android:scaleType="center"
                android:layout_marginStart="31dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/menu4"
            android:padding="5dp"
            android:background="@color/primaryBgColor"
            android:layout_margin="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/logout_foreground"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profilearrow_foreground"
                android:layout_gravity="center"
                android:layout_marginStart="125dp"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
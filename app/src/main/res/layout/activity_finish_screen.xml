<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishScreen"
    android:background="@color/primaryBgColor"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_gravity="center|center_vertical">
    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/trophy"
        android:layout_marginTop="100dp"
        android:id="@+id/img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Team Names "
        android:textSize="25sp"
        android:id="@+id/text"
        android:fontFamily="@font/amaranth"
        android:layout_below="@+id/img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="“ A team above all. Above all a team. Congratulations on your well-deserved victory! ”"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:id="@+id/text1"
        android:fontFamily="@font/amaranth"
        android:layout_below="@+id/text"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/navigation"
            android:layout_below="@+id/text1"
            android:gravity="center|center_horizontal"
            app:cardCornerRadius="50dp"
            android:id="@+id/backhome"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
           >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/home"/>

        </androidx.cardview.widget.CardView>



</RelativeLayout>